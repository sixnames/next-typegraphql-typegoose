{
  "name": "next-api",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "up": "docker-compose -f docker-compose.dev.yml up -d",
    "stop": "docker-compose -f docker-compose.dev.yml stop",
    "down": "docker-compose -f docker-compose.dev.yml down && rm -rf data/*",
    "postup": "yarn dev",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint '**/*.{js,ts,tsx}'",
    "lint:fix": "npm run lint -- --fix",
    "generate": "graphql-codegen --config codegen.yml",
    "jest:watch": "jest --watch --runInBand",
    "jest": "jest --runInBand --coverage"
  },
